<div class="container">
  <h1 class="text-shadow">Game Servers</h1>

  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Host</th>
      <th>Capacity</th>
      <th>Join</th>
    </tr>
    </thead>
    <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%=game.name%></td>
        <td><%=game.user.username%></td>
        <td><%= game.characters.count %>/<%= game.max_user_count %></td>
        <td><%= link_to 'Join', game_path(game), class: 'btn' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'Add Existing', list_games_path, class: 'btn' %>
  <%= link_to 'Create New', new_game_path, class: 'btn' %>
</div>
