<div class="form-container">
<h1>Login</h1>
<%= form_tag login_path, method: :post do %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, required: true %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <div>
    <%= submit_tag 'Login', class: 'btn' %>
    <%= link_to 'Back', welcome_path, class: 'btn' %>
  </div>

  <div>
    <%= link_to 'Forgot your password?', new_password_reset_path, style: 'font-family: "Arial"' %>
  </div>
<% end %>
</div>