<div class="container">
  <h1>Game Servers</h1>

  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Host</th>
      <th>Capacity</th>
      <th>Join</th>
    </tr>
    </thead>
    <tbody>
    <% 3.times do %>
      <tr>
        <td><%= "server.name" %></td>
        <td><%= "server.host_name" %></td>
        <td><%= "4/6" %></td>
        <td>
          <% if 4 < 6 %>
            <%= button_to 'Join', logout_path, method: :post %>
          <% else %>
            <span>Full</span>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'Add Server', logout_path, class: 'button' %>
</div>
